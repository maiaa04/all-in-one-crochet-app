<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="218dp"
    android:id="@+id/counter_name_popup"
    android:background="@drawable/popup_background">

    <TextView
        android:id="@+id/counter_name_text"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_above="@+id/counter_name_edit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Name of new counter:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/counter_name_edit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/light_gray"
        android:fontFamily="@font/poppins_regular"
        android:hint="Name of new counter"
        android:padding="0dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/counter_name_okay_btn"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@+id/counter_name_edit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="0dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:backgroundTint="@color/green3"/>
</RelativeLayout>